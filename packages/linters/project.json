{
  "name": "@juntossomosmais/linters",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/linters",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/linters",
        "commands": [
          {
            "command": "npx copyfiles -e **/*.spec.js -u 1 src/**/* dist"
          }
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "jest"
          }
        ]
      }
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "jest --coverage --ci --coverageDirectory=packages/linters/coverage --passWithNoTests"
          }
        ]
      }
    },
    "publish-package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npm publish --access public"
          }
        ]
      }
    }
  }
}
