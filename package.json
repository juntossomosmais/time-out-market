{
  "name": "@juntossomosmais/time-out-market",
  "description": "A market of shared JavaScript libraries to help you save time and effort",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start": "npx nx run-many --target=start --maxParallel=10",
    "test": "npx nx run-many --target=test --parallel",
    "test:ci": "npx nx affected --target=test:ci --base=origin/main --parallel",
    "test:ci-merge": "npx nx affected --target=test:ci --base=origin/main~1 --head=origin/main --parallel",
    "publish-package": "npx nx affected --target=publish-package --base=HEAD~1 --head=HEAD --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@juntossomosmais/atomium-tokens": "^1.2.0",
    "@nx/jest": "19.6.4",
    "@nx/js": "19.6.4",
    "@nx/vite": "19.6.4",
    "@nx/web": "19.6.4",
    "@nx/workspace": "19.6.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.9.3",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "22.8.6",
    "@types/object-hash": "^3.0.6",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "babel-loader": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-sonarjs": "^2.0.4",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nx": "19.6.4",
    "prettier": "3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-order": "^6.0.4",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "^5.6.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "object-hash": "^3.0.0",
    "pako": "^2.1.0",
    "tslib": "^2.3.0"
  }
}
