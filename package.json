{
  "name": "@juntossomosmais/time-out-market",
  "description": "A market of shared JavaScript libraries to help you save time and effort",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:pre-commit": "eslint --resolve-plugins-relative-to . -c  ./.eslintrc.json $(git diff --cached --name-only --diff-filter=AM | grep  -E \"(.js$|.ts$)\") --cache --cache-location node_modules/.cache/eslint",
    "lint:styles": "stylelint '**/*.scss'",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start": "npx nx run-many --target=start --maxParallel=10",
    "test": "npx nx run-many --target=test --parallel",
    "test:ci": "npx nx affected --target=test:ci --base=origin/main --parallel",
    "test:ci-merge": "npx nx affected --target=test:ci --base=origin/main~1 --head=origin/main --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@juntossomosmais/atomium-tokens": "^1.1.0",
    "@nrwl/cli": "15.9.3",
    "@nrwl/eslint-plugin-nx": "^16.7.4",
    "@nrwl/workspace": "16.7.4",
    "@types/node": "20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.48.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-sonarjs": "^0.21.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "nx": "16.7.4",
    "prettier": "3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.2.2"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "16.7.4",
    "@nx/nx-darwin-x64": "16.7.4",
    "@nx/nx-linux-x64-gnu": "16.7.4",
    "@nx/nx-win32-x64-msvc": "16.7.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npm run lint:pre-commit"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "nx": {
    "includedScripts": []
  }
}
