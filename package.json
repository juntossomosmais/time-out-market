{
  "name": "@juntossomosmais/time-out-market",
  "description": "A market of shared JavaScript libraries to help you save time and effort",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:pre-commit": "eslint --resolve-plugins-relative-to . -c  ./.eslintrc.json $(git diff --cached --name-only --diff-filter=AM | grep  -E \"(.js$|.ts$)\") --cache --cache-location node_modules/.cache/eslint",
    "lint:styles": "stylelint '**/*.scss'",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start": "npx nx run-many --target=start --maxParallel=10",
    "test": "npx nx run-many --target=test --parallel",
    "test:ci": "npx nx affected --target=test:ci --base=origin/main --parallel",
    "test:ci-merge": "npx nx affected --target=test:ci --base=origin/main~1 --head=origin/main --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@juntossomosmais/atomium-tokens": "^1.0.0",
    "@nrwl/cli": "15.9.3",
    "@nrwl/eslint-plugin-nx": "^16.5.4",
    "@nrwl/workspace": "16.6.0",
    "@types/node": "20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nx": "16.5.4",
    "prettier": "3.0.0",
    "pretty-quick": "^3.1.3",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --check",
      "npm run lint:pre-commit"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "nx": {
    "includedScripts": []
  }
}
